@inherits LayoutComponentBase


<MudThemeProvider Theme="_currentTheme" />
<MudSnackbarProvider />

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
    <div class="d-flex flex-column mud-width-full">
        <MudPaper Elevation="25" Class="pa-8" Width="100%" MaxWidth="500px">
            <MudGrid>
                <MudItem >
                    <MudIcon Icon="@Icons.Material.Outlined.Anchor" Size="Size.Large" Style="width: 100px; height: 100px;" />
                </MudItem>
                <MudItem >
                    <MudText Typo="Typo.h3" Align="Align.Left" Style="margin: 25px 0px 0px 0px" >SmartBoat</MudText>
                </MudItem>
            </MudGrid>
           
            @Body
        </MudPaper>
    </div>
</MudContainer>

@code {

    string _icon = Icons.Material.Outlined.Login;
    private MudTheme _currentTheme = new MudBlazorSmartBoat();
}