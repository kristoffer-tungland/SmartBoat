@using System.Security.Claims
<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Image="images/avatar_jonny.jpg" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <AuthorizeView>
                <MudText Typo="Typo.body2">@context.User?.Identity?.Name</MudText>
                <MudText Typo="Typo.caption">@context.User.FindFirst(ClaimTypes.Email)?.Value</MudText>
            </AuthorizeView>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>

@code {

    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }

}